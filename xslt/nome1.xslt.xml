<?xml version="1.0" encoding="utf-8"?>
<stylesheet version="1.0"
            xmlns="http://www.w3.org/1999/XSL/Transform">
  <output encoding="utf-8"
          omit-xml-declaration="yes"
          method="text"
          media-type="text/plain"/>
  <template match="text()"/>
  <template match="/">
    <apply-templates/>
  </template>
  <template match="//linking/reference">
    <value-of select="./@num"/>
    <call-template name="increment">
      <with-param name="in"
		  select="./@num"/>
    </call-template>
  </template>
  <template name="increment">
    <param name="in"/>
    <choose>
      <when test="//intextref/Reference[text() = $in]">
	<text>yes&#10;</text>
      </when>
      <otherwise>
	<text>no&#10;</text>
      </otherwise>
    </choose>
  </template>
</stylesheet>
