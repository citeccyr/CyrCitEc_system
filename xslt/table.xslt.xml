	<xsl:text>&#10;</xsl:text>
      </tr>
      <xsl:for-each select="/table/series">
	<xsl:text>&#10;</xsl:text>
	<tr>
	  <th></th>
	  <xsl:text>&#10;&#32;&#32;&#32;&#32;&#32;</xsl:text>
	  <th>
	    <a>
	      <xsl:attribute name="href">
		<xsl:text>https://socionet.ru/collection.xml?h=</xsl:text>
		<xsl:value-of select="@id"/>
	      </xsl:attribute>
	      <xsl:value-of select="@id"/>
	    </a>
	  </th>
	  <xsl:text>&#10;&#32;&#32;&#32;&#32;&#32;</xsl:text>
